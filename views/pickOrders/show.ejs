<%- include('../partials/header') %>
<section id="show-body">
<form action="/pickorders/<%= pickOrder._id %>?_method=PUT" method="POST">
    <div class="center">
        <span class="big">
            Pick Order:
        </span>
        <input id="pick-order-name-input" type="text" name="pickOrderName" value="<%= pickOrder.name %>">
    </div>
    <div id="picks">
        <div class="form">
            <input type="submit" value="Save Changes">
            <% pickOrder.picks.forEach(pick => { %>
                <% if(pick.pickOrder) { %>
                    <div class="row <%= pick.pickOrder % 2 === 0 ? '' : 'gray' %>">
                        <div class="cell">
                            <input type="hidden" name="name" value="<%= pick.name %>">
                            <%= pick.name %>
                        </div>
                        <div class="cell-middle">
                            <span>Pick Order:</span>
                            <input type="text" name="pickOrder" value="<%= pick.pickOrder %>" >
                        </div>
                        <div class="cell-end">
                            <span>Tier:</span>
                            <input type="text" name="tier" value="<%= pick.tier %>">
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</form>
</section>
<%- include('../partials/footer') %>