<%- include('../partials/header') %>
<section id="users-body">
    <div id="pick-orders">
        <h1>Pick Orders</h1>
        <div class="row head">
            <div>Name</div>
        </div>
        <% if(pickOrders) { %>
            <% pickOrders.forEach(pickOrder => { %>
                <div class="row">
                    <div class="cell">
                        <a class="black-link" href="/pickOrders/<%= pickOrder._id %>"><%= pickOrder.name %></a>
                    </div>
                    <div class="cell">
                        <form action="/pickOrders/<%= pickOrder._id %>/?_method=DELETE" method="POST">
                            <input type="submit" value="Delete">
                        </form>
                    </div>
                </div>
                <% }); %> 
            <% } %>     
        <div id="add-file-form">
            <h2>Import Pick Order</h2>
            <form action="/pickOrders" method="POST" enctype="multipart/form-data" class="column">
                <div class="input-block flex-row">
                    <input type="text" name="name" value="" placeholder="Name your pick order!" required>
                </div>
                <div class="input-block">
                    <input type="file" accept=".json" name="pickOrder" id="pickOrder" class="inputfile" required> 
                    <label for="pickOrder"> Select a file to upload</label> 
                </div>
                <div class="input-block">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>
    </div>
    <div id="user-info">
        <img class="img-circle" src="<%= user.avatar %>" alt="">
        <p><%= user.name %></p>
        <p><%= user.email %></p>
        <p>
            <a class="black-link" href="/logout">Logout</a>
        </p>
    </div>
</section>

<script defer src="javascripts/users/index.js"></script>
<%- include('../partials/footer') %>

